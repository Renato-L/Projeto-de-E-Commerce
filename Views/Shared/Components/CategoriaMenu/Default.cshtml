<div class="dropdown">
    <button class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        Lanches
    </button>
    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>
            <a class="dropdown-item" asp-controller="Lanche" asp-action="List" style="color:black"
               asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <a class="dropdown-item" asp-controller="Lanche" asp-action="List" style="color:black"
           asp-route-categoria="">Todos os Lanches</a>
    </ul>
</div>